<section>
  <h2>Add Fields</h2>
  
  <p>Choose a type of field to add to the survey.</p>
  
  <div class="add-fields-menu">
    <h3>Demographics</h3>
    <ul>
      <li {{action "addQuestion" "Questions::TextField" "name"}}>Name</li>
      <li {{action "addQuestion" "Questions::BigTextField" "address"}}>Address</li>
      <li {{action "addQuestion" "Questions::TextField" "phone"}}>Phone</li>
      <li {{action "addQuestion" "Questions::TextField" "email"}}>Email</li>
      <li {{action "addQuestion" "Questions::TextField" "gender"}}>Gender</li>
    </ul>
    <h3>Questions</h3>
    <ul>
      <li {{action "addQuestion" "Questions::TextField"}}>Freeform</li>
      <li {{action "addQuestion" "Questions::BigTextField"}}>Big freeform</li>
      <li {{action "addQuestion" "Questions::RangeField"}}>Numeric range</li>
      <li {{action "addQuestion" "Questions::CheckBoxField"}}>Check box</li>
      <li {{action "addQuestion" "Questions::DropDownField"}}>Drop-down menu</li>
      <li {{action "addQuestion" "Questions::RadioField"}}>Radio buttons</li>
    </ul>
    <h3>Display Elements</h3>
    <ul>
      <li {{action "addQuestion" "Questions::Label"}}>Display text</li>
      <li {{action "addQuestion" "Questions::Divider"}}>Divider</li>
      <li {{action "addQuestion" "Questions::Heading"}}>Heading</li>
    </ul>
  </div>
  <div class="hidable">
    <span class="button icon icon-left-layout" title="Question beside answer"></span>
    <br/>
    <span class="button icon icon-top-layout" title="Question above answer"></span>
  </div>
</section>